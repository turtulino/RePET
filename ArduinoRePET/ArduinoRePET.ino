  do {

    // Current temperature
    show_temperature(TEMPERATURAPANTALLA, 60, DISPLAY_HEADER_SIZE + 16 + 4);

    // Target temperature
    show_temperature(Setpoint, 60, DISPLAY_HEADER_SIZE + 46);

    // Thermomether ICON
    if (ESTAT) {
      if (conta2 < 30) {
        u8g2.drawXBMP(5, 4, 40, 64, TEMP1);
        conta2 = conta2 + 1;
      } else {
        u8g2.drawXBMP(5, 4, 40, 64, TEMP2);
        conta2 = conta2 + 1;
        if (conta2 == 70) {
          conta2 = 0;
        }
      }
    }

    // Extra info in header
    show_header();

  } while (u8g2.nextPage());
}

void show_temperature(double value, int x, int y) {

  u8g2.setFont(u8g2_font_inb16_mf);
  u8g2.setCursor(x, y);

  char t[7];
  sprintf(t, "%3d%cC", (int)value, 176);  // 3 digits, ยบ and "C".
  u8g2.print(t);
}

